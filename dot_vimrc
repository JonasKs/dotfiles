" Update plugins with `:PlugUpdate` and install plugins with `:PlugInstall`
call plug#begin('~/.vim/plugged')
  " Vim airline, status bar etc.
  Plug 'vim-airline/vim-airline'
  Plug 'vim-airline/vim-airline-themes'

  " Nerd tree, file explorer
  Plug 'preservim/nerdtree'

  " one dark <3 
  Plug 'joshdick/onedark.vim'
  
  " Syntax highlight
  Plug 'sheerun/vim-polyglot'
  " elixir
  Plug 'elixir-editors/vim-elixir'
  Plug 'mhinz/vim-mix-format'
  " Collection of common configurations for the Nvim LSP client
  "
  " Rust plugins gotten from here:https://sharksforarms.dev/posts/neovim-rust/
  Plug 'neovim/nvim-lspconfig'

  " Completion framework
  Plug 'hrsh7th/nvim-cmp'
  " LSP completion source for nvim-cmp
  Plug 'hrsh7th/cmp-nvim-lsp'

  " Snippet completion source for nvim-cmp
  Plug 'hrsh7th/cmp-vsnip'

  " Other usefull completion sources
  Plug 'hrsh7th/cmp-path'
  Plug 'hrsh7th/cmp-buffer'

  " See hrsh7th's other plugins for more completion sources!

  " To enable more of the features of rust-analyzer, such as inlay hints and more!
  Plug 'simrat39/rust-tools.nvim'

  " Snippet engine
  Plug 'hrsh7th/vim-vsnip'

" Color scheme used in the GIFs!
" Plug 'arcticicestudio/nord-vim'
call plug#end()

set rtp+=/opt/homebrew/opt/fzf

" Airline settings
let g:airline_theme='onedark'

" Nerd tree config
" Change arrows
let g:NERDTreeDirArrowExpandable = '▸'
let g:NERDTreeDirArrowCollapsible = '▾'
" Show hidden files
let NERDTreeShowHidden=1 
" Start NERDTree when Vim is started
autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * NERDTree | if argc() > 0 || exists("s:std_in") | wincmd p | endif
" Exit Vim if NERDTree is the only window remaining in the only tab.
autocmd BufEnter * if tabpagenr('$') == 1 && winnr('$') == 1 && exists('b:NERDTree') && b:NERDTree.isTabTree() | quit | endif

" elixir
let g:mix_format_on_save = 1

" Theme settings
colorscheme onedark
syntax on
set number
highlight Normal ctermbg=None
highlight LineNr ctermfg=DarkGrey

set expandtab " Ensure we're using spaces not \t
set relativenumber
set number 
" Enable syntax highlighting
" syntax on " <- Jonas: Disable
filetype plugin indent on

